{
  "display_information": {
    "name": "Profile Magic",
    "description": "AI-powered profile picture editor using Google Gemini",
    "background_color": "#4A90E2",
    "long_description": "Transform your Slack profile picture with AI! Choose from fun presets like 'New Do', 'Cartoon Me', or 'Teleport Me', or describe your own custom transformation. Preview before applying - no permanent changes without your approval!"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Profile Magic",
      "always_online": true
    },
    "shortcuts": [
      {
        "name": "Edit image",
        "type": "global",
        "callback_id": "banana",
        "description": "Edit an existing image or generate a new one"
      }
    ],
    "slash_commands": [
      {
        "command": "/boo",
        "description": "Edit your profile picture with AI",
        "usage_hint": "[optional: describe your transformation]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "redirect_urls": [
      "https://profilemagic-production.up.railway.app/auth/slack/callback"
    ],
    "scopes": {
      "user": [
        "users.profile:read",
        "users.profile:write",
        "files:read"
      ],
      "bot": [
        "chat:write",
        "commands",
        "files:read",
        "users.profile:read",
        "users:read",
        "chat:write.public",
        "im:write",
        "files:write",
        "channels:read",
        "groups:read",
        "im:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "function_executed"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": true,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false,
    "hermes_app_type": "remote",
    "function_runtime": "remote"
  }
}